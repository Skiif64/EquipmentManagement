@page "/"
@using System.Collections.ObjectModel;
@using EquimentManagement.Contracts.Responses;
<PageTitle>Index</PageTitle>

<div class="container-lg container-md">
    <div class="row">
        <div class="col-lg-6 col-md-6"></div>
        <div class="col-lg-6 col-md-6">
            <h3 class="text-center">Журнал событий</h3>
            @if (journalRecords is not null)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Тип
                            </th>
                            <th>
                                Сообщение
                            </th>
                            <th>
                                От
                            </th>
                            <th>
                                Дата
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in journalRecords)
                        {
                            <tr>
                                <td>
                                    @record.EventName
                                </td>
                                <td>
                                    @record.Message
                                </td>
                                <td>
                                    @record.Username
                                </td>
                                <td>
                                    @record.DateCreated?.ToLocalTime().ToString("dd MMMM yyyy г. hh:mm")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@code {
    private ObservableCollection<JournalRecordResponse>? journalRecords;

    protected override async Task OnInitializedAsync()
    {
        journalRecords = new ObservableCollection<JournalRecordResponse>();
    }
}