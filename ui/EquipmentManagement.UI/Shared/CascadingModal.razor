@using EquipmentManagement.UI.Shared.Modal
@Window ??= <Modal></Modal>

@if (IsVisible)
{
    @Window
}
@ChildContent

@code {
    private bool isVisible = false;
    public bool IsVisible
    {
        get => isVisible;
        set
        {
            isVisible = value;
            StateHasChanged();
        }
    }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public RenderFragment? Window { get; set; }

}
