@using EquipmentManagement.UI.Shared.Modal;
<div class="p-2">
    <img class="img-thumbnail" role="button" src="@Source" alt="@Alt"
         @onclick="ExpandAsync" />
</div>

@code {
    [CascadingParameter]
    private IModalService Modal { get; set; } = null!;
    [Parameter]
    public string Source { get; set; } = string.Empty;
    [Parameter]
    public string Alt { get; set; } = string.Empty;

    private async Task ExpandAsync()
    {
        var parameteres = new ModalParameters()
        .Add(nameof(ImageModal.Source), Source);        
        var options = new ModalOptions
            {
                Size = ModalSize.ExtraLarge
            };
        var modal = Modal.Show<ImageModal>(string.Empty, parameteres, options);
        var result = await modal.Result;
    }
}
